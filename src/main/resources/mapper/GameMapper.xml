<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.qinglan.sdk.server.dao.Game">
    <resultMap id="BaseResultMap" type="com.qinglan.sdk.server.dao.Game">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="appName" property="appName" jdbcType="VARCHAR"/>
        <result column="secretKey" property="secretKey" jdbcType="VARCHAR"/>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
    id, appName, secretKey, createTime
  </sql>

    <select id="getGameById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from b_game
        where id = #{id,jdbcType=BIGINT}
    </select>
</mapper>